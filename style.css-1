body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f8ff;
    color: #333;
    margin: auto;
    padding: 30px;
    max-width: 800px;
    border-radius: 12px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
}

h1 {
    color: #0066cc;
    font-size: 36px;
    margin-bottom: 10px;
}

h2 {
    color: #009688;
    font-size: 28px;
    margin-bottom: 10px;
}

p {
    font-size: 18px;
    margin-bottom: 20px;
    line-height: 1.6;
}

a {
    color: #e91e63;
    text-decoration: none;
}

a:hover {
    color: #ff4081;
    text-decoration: underline;
}

img {
    display: block;
    margin: 20px auto;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(24, 5, 5, 0.2);
}
button {
    background-color: #0066cc;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #004d99;
}
